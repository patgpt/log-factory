{
  "name": "loggerama3000",
  "version": "1.0.0",
  "description": "A flexible and powerful logging solution for Node.js, Next.js, and Bun applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build ./src/log-facotry.ts --outdir ./dist",
    "test": "bun test --coverage --reporter=junit --reporter-outfile=coverage/coverage.junit",
    "test:coverage": "bun test --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "prepare": "husky",
    "format": "prettier --write .",
    "lint": "eslint --fix ."
  },
  "displayName": "Log Factory",
